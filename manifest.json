{
  "manifest_version": 3,
  "name": "Pipe to Table Converter",
  "version": "1.0",
  "description": "Convert pipe-separated data on any webpage into a table.",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_title": "Pipe to Table"
  }
}
